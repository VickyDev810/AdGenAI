{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "es6",                                 /* Set target to ES6 to support modern JavaScript features */
    "module": "commonjs",                            /* Keep this as commonjs for Node.js compatibility */
    "esModuleInterop": true,                         /* Enable compatibility for importing CommonJS modules */
    "skipLibCheck": true,                            /* Skip type-checking of libraries for faster build */
    "resolveJsonModule": true,                       /* Allow importing .json files */
    "forceConsistentCasingInFileNames": true,        /* Ensure that imports use the correct casing */
    "strict": true,                                  /* Enable strict type checking */
    "noImplicitAny": true,                           /* Ensure variables are explicitly typed */
    "noImplicitThis": true,                          /* Ensure `this` is explicitly typed */
    "noUnusedLocals": true,                          /* Prevent unused local variables */
    "noUnusedParameters": true,                      /* Prevent unused parameters */
    "noImplicitReturns": true,                       /* Ensure functions always return a value or explicit `null` */
    "noFallthroughCasesInSwitch": true               /* Prevent fall-through in switch statements */
  }
}
